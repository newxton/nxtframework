<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newxton.nxtframework.dao.NxtAclUserActionDao">

    <resultMap id="BaseResultMap" type="com.newxton.nxtframework.entity.NxtAclUserAction">
        <!--@Table nxt_acl_user_action-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="actionId" column="action_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, user_id, action_id
        from nxt_acl_user_action
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, user_id, action_id
        from nxt_acl_user_action
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, user_id, action_id
        from nxt_acl_user_action
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="actionId != null">
                and action_id = #{actionId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into nxt_acl_user_action(user_id, action_id)
        values (#{userId}, #{actionId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update nxt_acl_user_action
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="actionId != null">
                action_id = #{actionId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from nxt_acl_user_action where id = #{id}
    </delete>

</mapper>