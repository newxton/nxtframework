<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newxton.nxtframework.dao.NxtAclGroupDao">

    <resultMap id="BaseResultMap" type="com.newxton.nxtframework.entity.NxtAclGroup">
        <!--@Table nxt_acl_group-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="groupName" column="group_name" jdbcType="VARCHAR"/>
        <result property="groupRemark" column="group_remark" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, group_name, group_remark
        from nxt_acl_group
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, group_name, group_remark
        from nxt_acl_group
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, group_name, group_remark
        from nxt_acl_group
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="groupName != null and groupName != ''">
                and group_name = #{groupName}
            </if>
            <if test="groupRemark != null and groupRemark != ''">
                and group_remark = #{groupRemark}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into nxt_acl_group(group_name, group_remark)
        values (#{groupName}, #{groupRemark})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update nxt_acl_group
        <set>
            <if test="groupName != null and groupName != ''">
                group_name = #{groupName},
            </if>
            <if test="groupRemark != null and groupRemark != ''">
                group_remark = #{groupRemark},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from nxt_acl_group where id = #{id}
    </delete>

</mapper>