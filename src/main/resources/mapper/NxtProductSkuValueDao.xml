<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newxton.nxtframework.dao.NxtProductSkuValueDao">

    <resultMap id="BaseResultMap" type="com.newxton.nxtframework.entity.NxtProductSkuValue">
        <!--@Table nxt_product_sku_value-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="skuId" column="sku_id" jdbcType="INTEGER"/>
        <result property="skuValue" column="sku_value" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, sku_id, sku_value
        from nxt_product_sku_value
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, sku_id, sku_value
        from nxt_product_sku_value
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, sku_id, sku_value
        from nxt_product_sku_value
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="skuId != null">
                and sku_id = #{skuId}
            </if>
            <if test="skuValue != null and skuValue != ''">
                and sku_value = #{skuValue}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into nxt_product_sku_value(sku_id, sku_value)
        values (#{skuId}, #{skuValue})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update nxt_product_sku_value
        <set>
            <if test="skuId != null">
                sku_id = #{skuId},
            </if>
            <if test="skuValue != null and skuValue != ''">
                sku_value = #{skuValue},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from nxt_product_sku_value where id = #{id}
    </delete>

</mapper>